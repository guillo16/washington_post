<h2>Create an Article</h2>
<div class="container">
  <form>
    <%= simple_form_for @article do |f| %>
    <div class="row">
      <div class="col">
        <%= f.input :title, input_html: { class: 'form-control' } %>
      </div>
      <div class="col">
        <%= f.input :subtitle, input_html: { class: 'form-control ' } %>
      </div>
    </div>
    <%= f.input :content_1, input_html: { class: 'form-control form-control-lg' } %>
    <%= f.input :content_2, input_html: { class: 'form-control form-control-lg' } %>
    <%= f.input :content_3, input_html: { class: 'form-control form-control-lg' } %>
    <div class="row">
      <div class="col">
        <%= f.input :photo1 %>
      </div>
      <div class="col">
        <%= f.input :footer_1 %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :photo2 %>
      </div>
      <div class="col">
        <%= f.input :footer_2 %>
      </div>
    </div>
    <%= f.input :photo3 %>
    <p>importante no olvidar poner categoria</p>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Categories") %>
    <br><br>
    <%= f.submit class:"btn btn-primary btn-lg btn-block" %>
    <% end %>
  </form>
  <br>
</div>
<div class="form-footer mt-5 mb-5 d-flex justify-content-around align-items-center">
  <div>
   <%= link_to "back to index", root_path, class:"btn btn-warning btn-lg btn-block"  %>
 </div>
 <div>
  <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-danger btn-lg btn-block" %>
</div>

</div>




