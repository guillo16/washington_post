<div class="container">


<%= simple_form_for @article do |f| %>
<%= f.input :title %>
<%= f.input :subtitle %>
<%= f.input :content_1 %>
<%= f.input :content_2 %>
<%= f.input :content_3 %>
<%= f.input :photo1 %>
<%= f.input :photo2 %>
<%= f.input :photo3 %>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Categories") %>
<%= f.submit %>
<% end %>



<%= link_to "back to index", root_path  %>
<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
</div>
